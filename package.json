{
  "name": "clean-commits",
  "version": "1.0.0",
  "description": "Example repository on how to do clean commits with the help of tools like husky, commitlint and commitizen.",
  "private": true,
  "scripts": {
    "prepare": "node .husky/install.mjs && git config --local core.editor cat",
    "lint": "prettier --check . && eslint .",
    "fix": "prettier --write . && eslint --fix .",
    "commit": "cz"
  },
  "keywords": [],
  "author": "Tobias Stadler",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@commitlint/cz-commitlint": "19.2.0",
    "commitizen": "4.3.0",
    "eslint": "9.6.0",
    "eslint-config-prettier": "9.1.0",
    "husky": "9.0.11",
    "inquirer": "9.3.1",
    "lint-staged": "15.2.7",
    "prettier": "3.3.2"
  }
}
